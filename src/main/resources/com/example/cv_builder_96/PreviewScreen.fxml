<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<ScrollPane fx:id="scrollPane" fitToWidth="true"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cv_builder_96.PreviewScreenController">

    <AnchorPane fx:id="rootPane" prefWidth="600">

        <VBox fx:id="contentBox"
              layoutX="0" layoutY="0"
              spacing="25"
              prefWidth="600"
              style="-fx-background-color: #D1D2DD; -fx-padding: 30;">

            <ImageView fx:id="previewImageView"
                       fitWidth="230" fitHeight="230"
                       preserveRatio="true"
                       style="-fx-border-color: #444; -fx-border-width: 2;" />

            <Label text="Basic Information"
                   style="-fx-font-size: 30px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Name:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="nameLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Email:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="emailLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Phone:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="phoneLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Address:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="addressLabel" wrapText="true" style="-fx-font-size: 18px;"/>
            </HBox>

            <Label text="Education"
                   style="-fx-font-size: 30px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Degree:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="degreeLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Institution:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="institutionLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Year:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="yearLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <Label text="Work Experience"
                   style="-fx-font-size: 30px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Job Title:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="jobLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Company:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="companyLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Duration:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="durationLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <Label text="Projects"
                   style="-fx-font-size: 30px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Project Title:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="projectTitleLabel" style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Description:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="projectDescLabel" wrapText="true"
                       style="-fx-font-size: 18px;"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="editButton" text="Edit" onAction="#handleEdit"
                        style="-fx-font-size: 18px; -fx-padding: 8 18;" />
                <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete"
                        style="-fx-font-size: 18px; -fx-padding: 8 18; -fx-background-color: #E53935; -fx-text-fill: white;" />
            </HBox>

        </VBox>

    </AnchorPane>
</ScrollPane>