<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.cv_builder_96.PreviewScreenController">
    <content>
        <VBox spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- IMAGE -->
            <VBox alignment="CENTER">
                <ImageView fx:id="previewImageView" fitHeight="150" fitWidth="150" style="-fx-border-color:gray; -fx-border-width:1;" />
            </VBox>

            <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Basic Information" />

            <Label text="Name:" />
            <Label fx:id="nameLabel" />

            <Label text="Email:" />
            <Label fx:id="emailLabel" />

            <Label text="Phone:" />
            <Label fx:id="phoneLabel" />

            <Label text="Address:" />
            <Label fx:id="addressLabel" />

            <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Education" />
            <Label text="Degree:" /><Label fx:id="degreeLabel" />
            <Label text="Institution:" /><Label fx:id="institutionLabel" />
            <Label text="Year:" /><Label fx:id="yearLabel" />

            <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Work Experience" />
            <Label text="Job Title:" /><Label fx:id="jobTitleLabel" />
            <Label text="Company:" /><Label fx:id="companyLabel" />
            <Label text="Duration:" /><Label fx:id="durationLabel" />

            <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Project" />
            <Label text="Project Title:" /><Label fx:id="projectTitleLabel" />
            <Label text="Description:" /><Label fx:id="projectDescriptionLabel" />

        </VBox>
    </content>
</ScrollPane>
